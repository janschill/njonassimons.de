<% video_platform = video.video_platform_option.downcase %>
<% video_url = video.video_url %>

<div class="video">
  <% if video_platform.eql?("youtube") %>
    <% video_url = "https://www.youtube.com/embed/#{video_url}" %>
    <iframe class="video__player" width="1920" height="1080" src="<%= video_url %>" frameborder="0" allow="encrypted-media" allowfullscreen></iframe>
  <% else %>
    <% video_url = "https://player.vimeo.com/video/#{video_url}?autoplay=0&color=283c46&title=0&byline=0&portrait=0" %>
    <iframe class="video__player" width="1920" height="1080" src="<%= video_url %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
  <% end %>
</div>
